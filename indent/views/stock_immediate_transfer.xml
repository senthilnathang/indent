<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="stock.view_immediate_transfer" model="ir.ui.view">
        <field name="name">view_immediate_transfer</field>
        <field name="model">stock.immediate.transfer</field>
        <field name="arch" type="xml">
            <form string="Immediate transfer?">
                <group>
                    <p>
                        Have you received products in full?. If you click <i>apply</i>,
                        It will process all products as received.
                    </p>
                </group>
                <footer>
                    <button name="process" string="_Apply" type="object" class="btn-primary"/>
                    <button string="_Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    
    <record id="view_backorder_transfer_backorder" model="ir.ui.view">
        <field name="name">view_backorder_transfer</field>
        <field name="model">stock.backorder.transfer</field>
        <field name="arch" type="xml">
            <form string="Immediate transfer?">
                <group>
                    <p>
                        Are you sure you want to process?
                    </p>
                </group>
                <footer>
                    <button name="process" string="_Apply" type="object" class="btn-primary"/>
                    <button string="_Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
