<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_wizard_delivery_info" model="ir.ui.view">
        <field name="name">wizard.delivery_info</field>
        <field name="model">wizard_delivery.info</field>
        <field name="arch" type="xml">
            <form string="Delivery Info">
                <group>
                    <field name="driver_id"/>
                    <field name="vehicle_id"/>
                    <field name="vehicle_number"/>
                    <field name="vehicle_name"/>
                    <field name="vehicle_brand_id"/>
                </group>
                <footer>
                    <button name="process" string="Process with BackOrder" type="object" class="oe_highlight"/>
                    <button name="process_cancel_backorder" string="No Backorder" type="object" class="btn-primary"/>
                    <button string="_Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
