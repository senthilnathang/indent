<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_wizard_delivery_info" model="ir.ui.view">
        <field name="name">wizard.delivery.info</field>
        <field name="model">wizard.delivery.info</field>
        <field name="arch" type="xml">
            <form string="Delivery Info">
                <group>
                    <field name="indent_id"/>
                    <field name="driver_id"/>
                    <field name="vehicle_id"/>
                    <field name="brand_id"/>
                    <field name="model_id"/>
                    <field name="vehicle_number"/>
                </group>
                <footer>
                    <button name="process" string="Process" type="object" class="oe_highlight"/>
                    <button string="_Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
